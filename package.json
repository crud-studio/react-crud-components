{
  "name": "@crud-studio/react-crud-components",
  "version": "2.0.0",
  "description": "CRUD Studio core components for react apps.",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "start": "rollup -c -w",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.+(js|jsx|ts|tsx|json|yml|yaml|css|md|vue)\"",
    "watch": "npm-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crud-studio/react-crud-components.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/crud-studio/react-crud-components/issues"
  },
  "homepage": "https://github.com/crud-studio/react-crud-components#readme",
  "dependencies": {
    "copy-to-clipboard": "^3.3.1",
    "mousetrap": "^1.6.5",
    "react-merge-refs": "^1.1.0",
    "react-virtualized-auto-sizer": "^1.0.5",
    "react-window": "^1.8.6"
  },
  "peerDependencies": {
    "@crud-studio/react-crud-core": "^2.0.0",
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@lottiefiles/react-lottie-player": "^3.3.1",
    "@material-ui/core": "^5.0.0-beta.1",
    "@material-ui/system": "^5.0.0-beta.1",
    "@material-ui/icons": "^5.0.0-beta.1",
    "@material-ui/lab": "^5.0.0-alpha.40",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dropzone": "^11.3.2",
    "react-hook-form": "^7.8.5",
    "react-intl": "^5.20.4",
    "react-router-dom": "^6.0.0-beta.0",
    "react-use": "^17.2.4",
    "type-fest": "^1.2.0",
    "uuid": "^8.3.2",
    "xlsx": "^0.17.0"
  },
  "devDependencies": {
    "@rollup/pluginutils": "^4.1.1",
    "@types/lodash": "^4.14.170",
    "@types/mousetrap": "^1.6.8",
    "@types/node": "^16.3.2",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.7",
    "@types/react-virtualized-auto-sizer": "^1.0.0",
    "@types/react-window": "^1.8.3",
    "@types/uuid": "^8.3.0",
    "babel-core": "^6.26.3",
    "babel-runtime": "^6.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "6.0",
    "lint-staged": "^11.0.0",
    "npm-watch": "^0.10.0",
    "prettier": "^2.3.1",
    "rollup": "^2.53.1",
    "rollup-plugin-typescript2": "^0.30.0",
    "typescript": "^4.3.2"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,tsx"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "react-hooks/exhaustive-deps": "off"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120,
    "bracketSpacing": false,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix",
      "git add"
    ],
    "*.+(json|css|md)": [
      "prettier --write",
      "git add"
    ]
  }
}
